# frozen_string_literal: true

source "https://rubygems.org"

# Specify your gem's dependencies in this file.
gem "jekyll", "~> 4.3"   # Jekyll version, adjust according to your needs
gem "jekyll-default-layout", "~> 0.2" # Optional: default layouts for Jekyll
gem "jekyll-feed", "~> 0.15" # Optional: RSS feed support
gem "jekyll-seo-tag", "~> 2.7" # Optional: SEO tags for better search engine optimization

# For local development, you might need:
group :development do
  gem "jekyll-sitemap"   # Optional: generate a sitemap for better SEO
end

# If you're using GitHub Pages, this is the recommended gem for compatibility:
gem "github-pages", group: :jekyll_plugins

# If you're using bundler to manage dependencies, it's useful to include:
gem "bundler", "~> 2.5"
